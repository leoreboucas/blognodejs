<h2>Lista de postagens</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Nova Postagem</button></a>
{{#each posts}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{title}}</h4>
        <p>Descrição {{description}}</p>
        <p>{{content}}</p>
        <small>Data: {{date}}</small>
        <br>
        <small>Categoria: {{category.name}}</small>
        <br>
        <a href="/admin/posts/edit/{{_id}}">
            <button class="btn btn-success mt-3">Editar postagem</button>
        </a>
        <br>
        <a href="/admin/posts/delete/{{_id}}">
            <button class="btn btn-danger mt-4" >Deletar postagem</button>
        </a>
    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}