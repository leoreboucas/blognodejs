{{#if post}}
    <div class="card" style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">{{post.title}}</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">{{post.description}}</h6>
            <p class="card-text">{{post.content}}</p>
            <small>Categoria: {{post.category.name}}</small>
            <br>
            <small>Data de publicação: {{post.date}}</small>
            <br>
            <a href="/">
                <button class="btn btn-secondary mt-4">Voltar para a página principal</button>
            </a>
        </div>
    </div>
{{/if}}